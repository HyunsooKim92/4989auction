<% for(let i = 0; i < c_article.length; i++) { %>
    <div class="col-lg-4 col-sm-6 portfolio-item">
        <div class="hovereffect">
            <img src="http://placehold.it/700x400" alt="">
            <div class="overlay">
                <a class="info" href="/item_info/<%= c_article[i].id %>">
                    <div>
                        <span>제목 : </span>
                        <span><%=c_article[i].title %></span>
                    </div>
                    <div>
                        <span>현재가격 : </span>
                        <span><%=c_article[i].price %></span>
                    </div>
                    <div>
                        <span>종료시각 : </span>
                        <span><%= c_article[i].time %></span>
                    </div>
                </a>
            </div>
        </div>
    </div>
<% } %>